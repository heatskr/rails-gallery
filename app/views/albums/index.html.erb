<div class="page-header clearfix">
  <div class="pull-left">
    <h1>Listing albums</h1>
  </div>
  <div class="pull-right btn-header">
    <a href="<%= new_album_path %>" class="btn btn-primary">
      <span class="glyphicon glyphicon-plus"></span>
      New Album
    </a>
  </div>
</div>

<div class="row">
  <%- @albums.each do |album| -%>
  <div class="col-xs-6 col-md-3">
    <div class="thumbnail album">
      <a href="<%= album_path album %>" class="picture">
        <img alt="" src="<%= album.cover.thumb_180 %>"/>
      </a>
      <div class="caption">
        <h3><%= album.title %></h3>
        <p><%= pluralize album.pictures.count, :picture, :pictures %></p>
      </div>
    </div>
  </div>
  <%- end -%>
</div>
